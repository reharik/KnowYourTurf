@model ListViewModel
@using KnowYourTurf.Core
@using KnowYourTurf.Web
@using HtmlTags

@{ Layout = "~/Views/Shared/_listLayout.cshtml"; }
@section HeaderScripts{
    @MvcHtmlString.Create(Script("kyt.selectBoxPicker.js").ToString())
}
<script>
     var gridDef=  @MvcHtmlString.Create(JsonUtil.ToJson(Model.ListDefinition))
    $(document).ready(function(){
        $.extend(crudData,{"gridName":"gridContainer"});
        $("#gridContainer").AsGrid(gridDef,{multiselect:true});
        
    });
</script>
@MvcHtmlString.Create(StyledButtonFor("addNew", WebLocalizationKeys.NEW_EMPLOYEE).ToString())
@MvcHtmlString.Create(StyledButtonFor("print", WebLocalizationKeys.PRINT).AddClass("KYT_float_right").ToString())
<table id="gridContainer" class="scroll"></table>
<div id="pager" class="scroll" style="text-align:center;"></div>
