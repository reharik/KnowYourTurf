@model KnowYourTurf.Web.Models.EmployeeDashboardViewModel
@using KnowYourTurf.Core;
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI
@using HtmlTags


@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@section ExtraCss {
    @MvcHtmlString.Create(CSS("ui.jqgrid.css").ToString())
    @MvcHtmlString.Create(CSS("token-input.css").ToString())
}    
@section HeaderScripts{
    @MvcHtmlString.Create(Script("jqueryPlugins/grid.locale-en.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.jqGrid.src.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/jquery.kyt.grid.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.tokeninput.js").ToString()) 
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.slideViewerPro.1.5.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.grid.columnService.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.grid.formatters.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.gridHelpers.js").ToString())
    @MvcHtmlString.Create(Script("kyt.popupCrud.js").ToString())
    @MvcHtmlString.Create(Script("kyt.selectBoxPicker.js").ToString())
    @MvcHtmlString.Create(Script("kyt.baseClasses.js").ToString())
    @MvcHtmlString.Create(Script("kyt.employeeDashboardController.js").ToString())
    @MvcHtmlString.Create(Script("kyt.DisplayView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.FormView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.GridView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.PopupView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.TokenView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.popupDisplayModule.js").ToString())
    @MvcHtmlString.Create(Script("kyt.popupFormModule.js").ToString())
}
@section HeaderJavascript{
    var pendingTaskaddEditUrl = @MvcHtmlString.Create(JsonUtil.ToJson(Model.AddEditUrl));
    var pendingGridDef=  @MvcHtmlString.Create(JsonUtil.ToJson(Model.ListDefinition))
    var completeGridDef=  @MvcHtmlString.Create(JsonUtil.ToJson(Model.CompletedListDefinition))

    $(document).ready(function() {
        edcOptions = {
            pendingTaskaddEditUrl:pendingTaskaddEditUrl,
            pendingGridDef:pendingGridDef,
            completeGridDef:completeGridDef,
        }
        new kyt.EmployeeDashboardController(edcOptions);
    });
}

    <div class="KYT_DashInfo" id="masterArea">
        <div class="KYT_section_header" >
            @MvcHtmlString.Create(WebLocalizationKeys.EMPLOYEE_INFORMATION.ToString())
        </div>
        <div class="grid_5">
            @MvcHtmlString.Create(Html.HiddenFor(x => x.AddEditUrl).ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.EmployeeId).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.FirstName).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.LastName).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.EmergencyContact).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.EmergencyContactPhone).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.Email).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.User.PhoneMobile).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())

         </div>

    <div class="grid_5">
        @{if (Model.User.ImageUrl.IsNotEmpty())
          {
                @MvcHtmlString.Create(Html.ViewFor(x => x.User.ImageUrl).HideLabel().AddClassToInput("KYT_dashboardImage").ToString());
          }
        }
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.Address1).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.Address2).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.City).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.State).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.ZipCode).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.User.Notes).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
    </div>
    <div class="grid_10_KYT">
    </div>
    <div id="pendingTaskGridContainer" class="grid_5b">
        @MvcHtmlString.Create(StyledButtonFor("addNew", WebLocalizationKeys.NEW_TASK).ToString())
        <table id="gridContainer_pt" class="scroll"></table>
        <div id="pager" class="scroll" style="text-align:center;"></div>

    </div>

    <div id="completeTaskGridContainer" class="grid_4 KYT_AddNew_space">
        <table id="gridContainer_ct" class="scroll"></table>
        <div id="pager" class="scroll" style="text-align:center;"></div>
    </div>