<?xml version="1.0" ?>
<hibernate-mapping  auto-import="true"
										default-lazy="true"
										xmlns:xsd="http://www.w3.org/2001/XMLSchema"
										xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
										namespace="KnowYourTurf.Security.Model"
										assembly="KnowYourTurf.Security"
										xmlns="urn:nhibernate-mapping-2.2">
	<class name="Permission"
				 table="Permissions">
		<cache usage="read-write"
					 region="systemsupport-security"/>
		<id name="EntityId"
				access="property"
				column="EntityId"
      type="System.Int64">
      <generator class="identity">
      </generator>
    </id>
		<property name="Allow"
							access="property"
							type="Boolean">
			<column name="Allow"
							not-null="true"/>
		</property>
    <property name="Description"
							access="property"
							type="String">
      <column name="Description"
							length="1000"/>
    </property>
		<property name="Level"
							access="property"
							type="Int32">
			<column name="Level"
							not-null="true"/>
		</property>
		<many-to-one name="Operation"
								 access="property"
								 class="Operation"
								 column="Operation"
								 not-null="true" />
		<many-to-one name="User"
								 access="property"
								 class="KnowYourTurf.Security.IUser"
								 column="`User`" />
		<many-to-one name="UsersGroup"
								 access="property"
								 class="UsersGroup"
								 column="UsersGroup" />
	</class>
</hibernate-mapping>
